<html lang="en">

<head>
	<meta charset="utf-8">
	<title><%= @psychoactive.name %> | Erowid</title>
	<link rel="stylesheet" href="/main.css">

	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <link rel="apple-touch-icon" href="/touch-icon.png">

  <script type="text/javascript">
    window.addEventListener("load",function() {
      setTimeout(function() { window.scrollTo(0, 0); }, 0);
    });
  </script>
</head>

<body>
<div id="bodycontainer">

<a href="/">
<div class="smallheader">
  <h4>The Vaults of Erowid</h4>
</div>
</a>

<div class="psychoactive">
  <img src="http://www.erowid.org/chemicals/mdma/images/mdma_summary1.jpg" />

  <h1><%= @psychoactive.name %></h1>

  <div class="names">
    <h2>Common Names</h2>
    <p><%= @psychoactive.common_names %></p>
  </div>
  <div class="effects">
    <h2>Effects</h2>
    <p><%= @psychoactive.effects %></p>
  </div>
  <div class="chemicalname">
    <h2>Chemical Name</h2>
    <p><%= @psychoactive.chemical_name %></p>
  </div>
  <div class="description">
    <h2>Description</h2>
    <p><%= @psychoactive.description %></p>
  </div>
</div>

<div class="footer">
  <a href="<%= @psychoactive.url %>">view on non-mobile site</a>
</div>

</div>
</body>
</html>
